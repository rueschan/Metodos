<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/tamañoMatrizButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Enter"
        android:layout_below="@+id/tamaño"
        android:layout_alignRight="@+id/tamaño"
        android:layout_alignEnd="@+id/tamaño"
        android:layout_alignLeft="@+id/tamañoMatriz"
        android:layout_alignStart="@+id/tamañoMatriz" />

    <EditText
        android:id="@+id/tamaño"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:hint="Matriz cuadrada de nXn"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/matriz"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:hint="Llena la matriz"
        android:inputType="numberSigned"
        android:singleLine="false"
        android:textAlignment="center"
        android:layout_below="@+id/tamañoMatrizButton"
        android:layout_alignRight="@+id/tamañoMatrizButton"
        android:layout_alignEnd="@+id/tamañoMatrizButton" />

    <Button
        android:id="@+id/tamañoMatriz"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/matriz"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/resolverMetodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp" />

    <TextView
        android:id="@+id/calculaResultado"
        android:layout_width="250dp"
        android:layout_height="85dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_above="@+id/resolverMetodo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp" />




</RelativeLayout>